<h1>show</h1>
<p>
  Title:<br>
  <%= @question.title %>
</p>

<p>
  Name:<br>
  <%= @question.name %>
</p>

<p>
  Content:<br>
  <%= @question.content %>
</p>

<h2>Answers</h2>
<% @question.answers.each do |answer| %>
  <p>
    Name:<br>
    <%= answer.name %>
  </p>
  <p>
    content:<br>
    <%= answer.content %>
  </p>
  <P>
    <%#= link_to 'Destroy Answer',[answer.question, answer], data: {turbo_method: 'delete', turbo_confirm: 'Are you sure?'} %>
    <%= link_to 'Destroy Answer', [@question, answer], method: :delete, data: { turbo_confirm: 'Are you sure?' } %>
  </P>
<% end %>

<h2>Add a answer</h2>
<%= form_with model: [@question, @question.answers.build] do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'top', new_question_path %>